{
  "include": ["lib/index.ts"],
  "exclude": ["node_modules", "test/**.*"],
  "compilerOptions": {
    "outDir": "dist",
    "types": ["bun-types"],

    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  }
}
